// API 클라이언트 유틸리티
import { RealDeal, ApiResponse, SearchQuery } from './crawl-types';

const API_BASE_URL = process.env.NEXT_PUBLIC_API_URL || '';

// API 클라이언트 클래스
class ApiClient {
  private baseUrl: string;
  
  constructor(baseUrl: string = API_BASE_URL) {
    this.baseUrl = baseUrl;
  }
  
  private async request<T>(
    endpoint: string, 
    options: RequestInit = {}
  ): Promise<ApiResponse<T>> {
    const url = `${this.baseUrl}${endpoint}`;
    
    const defaultOptions: RequestInit = {
      headers: {
        'Content-Type': 'application/json',
        ...options.headers,
      },
      ...options,
    };
    
    try {
      const response = await fetch(url, defaultOptions);
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      return data;
      
    } catch (error) {
      console.error(`API request failed: ${endpoint}`, error);
      throw error;
    }
  }
  
  // GET /api/deals - 전체 핫딜 목록
  async getDeals(query: SearchQuery = {}): Promise<ApiResponse<RealDeal[]>> {
    const searchParams = new URLSearchParams();
    
    Object.entries(query).forEach(([key, value]) => {
      if (value !== undefined && value !== null && value !== '') {
        searchParams.append(key, String(value));
      }
    });
    
    const endpoint = `/api/deals${searchParams.toString() ? `?${searchParams.toString()}` : ''}`;
    return this.request<RealDeal[]>(endpoint);
  }
  
  // GET /api/deals/[id] - 상품 상세 정보
  async getDealById(id: string): Promise<ApiResponse<RealDeal>> {
    return this.request<RealDeal>(`/api/deals/${id}`);
  }
  
  // GET /api/search - 검색
  async searchDeals(searchQuery: {
    q: string;
    category?: string;
    mall?: string;
    page?: number;
    limit?: number;
    sortBy?: 'price' | 'discount' | 'crawledAt' | 'rating';
    sortOrder?: 'asc' | 'desc';
  }): Promise<ApiResponse<RealDeal[]>> {
    const searchParams = new URLSearchParams();
    
    Object.entries(searchQuery).forEach(([key, value]) => {
      if (value !== undefined && value !== null && value !== '') {
        searchParams.append(key, String(value));
      }
    });
    
    return this.request<RealDeal[]>(`/api/search?${searchParams.toString()}`);
  }
  
  // GET /api/categories/[category] - 카테고리별 필터
  async getDealsByCategory(
    category: string,
    options: {
      mall?: string;
      page?: number;
      limit?: number;
      sortBy?: 'price' | 'discount' | 'crawledAt' | 'rating';
      sortOrder?: 'asc' | 'desc';
      minPrice?: number;
      maxPrice?: number;
      minDiscount?: number;
    } = {}
  ): Promise<ApiResponse<RealDeal[]>> {
    const searchParams = new URLSearchParams();
    
    Object.entries(options).forEach(([key, value]) => {
      if (value !== undefined && value !== null && value !== '') {
        searchParams.append(key, String(value));
      }
    });
    
    const endpoint = `/api/categories/${category}${searchParams.toString() ? `?${searchParams.toString()}` : ''}`;
    return this.request<RealDeal[]>(endpoint);
  }
  
  // GET /api/malls/[mall] - 쇼핑몰별 필터
  async getDealsByMall(
    mall: string,
    options: {
      category?: string;
      page?: number;
      limit?: number;
      sortBy?: 'price' | 'discount' | 'crawledAt' | 'rating';
      sortOrder?: 'asc' | 'desc';
      minPrice?: number;
      maxPrice?: number;
      minDiscount?: number;
    } = {}
  ): Promise<ApiResponse<RealDeal[]>> {
    const searchParams = new URLSearchParams();
    
    Object.entries(options).forEach(([key, value]) => {
      if (value !== undefined && value !== null && value !== '') {
        searchParams.append(key, String(value));
      }
    });
    
    const endpoint = `/api/malls/${encodeURIComponent(mall)}${searchParams.toString() ? `?${searchParams.toString()}` : ''}`;
    return this.request<RealDeal[]>(endpoint);
  }
  
  // 관리자 API들
  async getCrawlStatus(): Promise<ApiResponse<any>> {
    return this.request<any>('/api/admin/crawl');
  }
  
  async controlCrawler(action: 'start' | 'stop' | 'run_now' | 'crawl_mall' | 'clear_cache', options?: {
    mall?: string;
    key?: string;
  }): Promise<ApiResponse<any>> {
    return this.request<any>('/api/admin/crawl', {
      method: 'POST',
      body: JSON.stringify({ action, ...options }),
    });
  }
}

// 싱글톤 API 클라이언트 인스턴스
export const apiClient = new ApiClient();

// 편의 함수들
export const api = {
  // 기본 데이터 페칭
  deals: {
    getAll: (query?: SearchQuery) => apiClient.getDeals(query),
    getById: (id: string) => apiClient.getDealById(id),
    search: (searchQuery: string, options?: any) => 
      apiClient.searchDeals({ q: searchQuery, ...options }),
    getByCategory: (category: string, options?: any) => 
      apiClient.getDealsByCategory(category, options),
    getByMall: (mall: string, options?: any) => 
      apiClient.getDealsByMall(mall, options),
  },
  
  // 관리자 기능
  admin: {
    getCrawlStatus: () => apiClient.getCrawlStatus(),
    startCrawler: () => apiClient.controlCrawler('start'),
    stopCrawler: () => apiClient.controlCrawler('stop'),
    runCrawlNow: () => apiClient.controlCrawler('run_now'),
    crawlMall: (mall: string) => apiClient.controlCrawler('crawl_mall', { mall }),
    clearCache: (key?: string) => apiClient.controlCrawler('clear_cache', { key }),
  }
};

// 에러 핸들링 유틸리티
export const handleApiError = (error: any): string => {
  if (error?.response?.data?.message) {
    return error.response.data.message;
  }
  
  if (error?.message) {
    return error.message;
  }
  
  return 'Unknown error occurred';
};

// 로딩 상태 관리를 위한 커스텀 훅에서 사용할 수 있는 타입
export interface UseApiState<T> {
  data: T | null;
  loading: boolean;
  error: string | null;
  refetch: () => Promise<void>;
}

// React에서 사용할 수 있는 커스텀 훅 (클라이언트 컴포넌트에서만 사용)
export function createApiHook<T>(
  fetchFn: () => Promise<ApiResponse<T>>
): () => UseApiState<T> {
  return function useApi(): UseApiState<T> {
    const [data, setData] = useState<T | null>(null);
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState<string | null>(null);
    
    const fetchData = async () => {
      try {
        setLoading(true);
        setError(null);
        const response = await fetchFn();
        
        if (response.success) {
          setData(response.data || null);
        } else {
          setError(response.message || 'Failed to fetch data');
        }
      } catch (err) {
        setError(handleApiError(err));
      } finally {
        setLoading(false);
      }
    };
    
    // Note: This would need to be used in a client component with proper React hooks
    // For now, we'll just return the structure
    return {
      data,
      loading,
      error,
      refetch: fetchData
    };
  };
}

